pipeline {
agent any

tools {
          nodejs 'NodeJS22'  
}

environment {
    FRONTEND_DIR = 'frontend'
  CHROME_BIN = '/usr/bin/chromium'
}

stages {

    stage('Checkout') {
        steps {
            checkout scm
        }
    }

    stage('Install Dependencies') {
        steps {
            dir("${FRONTEND_DIR}") {
                sh 'npm install'
            }
        }
    }


    stage('Build Angular App') {
        steps {
            dir("${FRONTEND_DIR}") {
                sh 'npm run build --prod'
            }
        }
    }
}

post {
    success {
        echo 'Frontend Build Successful!'
    }
    failure {
        echo 'Frontend Build Failed!'
    }
}

}
